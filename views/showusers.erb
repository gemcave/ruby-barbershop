
<table class="table table-striped">
<thead>
	<tr>
		<th scope="col">#</th>
		<th scope="col">Name</th>
		<th scope="col">Phone</th>
		<th scope="col">Date/Time</th>
		<th scope="col">Barber</th>
		<th scope="col">Color</th>
	</tr>
</thead>
<tbody>
<% @results.each do |row| %>
	<tr>
		<th scope="row"><%=row['id'] %></th>
		<td><%= row['username'] %></td>
		<td><%= row['phone'] %></td>
		<td><%= row['datestamp'] %></td>
		<td><%= row['barber'] %></td>
		<td><div style="width: 15px;height: 15px; background-color: <%= row['color'] %>;"></div></td>
	</tr>
<% end %>
</tbody>
</table>